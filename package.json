{
  "name": "@ryze-digital/content-zoom",
  "description": " Enlarges the width of a container or opens it in a dialog ",
  "license": "MIT",
  "version": "1.0.0-beta.1",
  "author": "RYZE Digital GmbH <kontakt@ryze-digital.de> (https://www.ryze-digital.de/)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:scripts": "eslint src tests/scripts ./*.js",
    "lint:styles": "stylelint src/styles/**",
    "lint-fix": "npm-run-all --parallel lint-fix:* --continue-on-error",
    "lint-fix:scripts": "npm run lint:scripts -- --fix",
    "lint-fix:styles": "prettier src/styles/** --write && npm run lint:styles -- --fix",
    "test": "npm run test:scripts",
    "test:scripts": "jest",
    "test:scripts:coverage": "jest --coverage",
    "build": "npm-run-all --parallel lint:* sass:build --continue-on-error",
    "watch": "npm run sass:watch",
    "sass:build": "sass demos/demo.scss:demos/build/demo.css --no-source-map --load-path=node_modules",
    "sass:watch": "sass demos/demo.scss:demos/build/demo.css --no-source-map --load-path=node_modules --load-path=src/styles --watch --poll"
  },
  "devDependencies": {
    "@ryze-digital/eslint-config-website": "^1.0.1",
    "@ryze-digital/prettier-config-website": "^1.0.1",
    "@ryze-digital/stylelint-config-website": "^1.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@ryze-digital/js-utilities": "github:ryze-digital/js-utilities#main",
    "@ryze-digital/scss-utilities": "^1.0.1"
  },
  "overrides": {
    "globals": "16.0.0"
  }
}
